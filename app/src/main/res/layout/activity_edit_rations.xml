<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!--name and barcode of the food items
        leave barcode blank if not applicable-->


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Editing Rations Manually"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/idEdtFoodName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:hint="Enter item Name" />

        <!--calories per serving-->
        <EditText
            android:id="@+id/idEdtCaloriesPerServing"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:hint="Enter Calories per Serving"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/idEdtFoodBarcode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:hint="Enter Barcode if known"
            android:inputType="number" />

        <!--says how many serving are in each package-->
        <EditText
            android:id="@+id/idEdtServingsPerItem"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:hint="Enter Servings per Item" />

        <!--says the total amount of of that food they have, decimals mean that
        they have something open-->
        <EditText
            android:id="@+id/idEdtTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:hint="Enter Total Amount" />

        <!--button for adding new course-->


        <Button
            android:id="@+id/idBtnEdtFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Edit Food"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeManBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Back"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>